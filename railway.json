{
  "build": {
    "builder": "nixpacks",
    "config": {
      "nixpacks": {
        // pacotes de sistema necessários para Pillow
        "packages": [
          "zlib",     // compressão PNG/GIF
          "jpeg",     // suporte JPEG
          "freetype"  // fontes TrueType
        ],
        // seus comandos de build
        "buildCommand": "pip install -r requirements.txt",
        "startCommand": "gunicorn app:app"
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn app:app --workers=1 --timeout 120"
  }
}
